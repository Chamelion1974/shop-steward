# Shop Steward Hub - Environment Configuration
# Copy this file to .env and customize as needed

# Application Settings
APP_NAME="Shop Steward - The Hub"
APP_VERSION="1.0.0"
DEBUG=True

# Security Settings
# IMPORTANT: Change this to a random secret key in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="your-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
# SQLite (default - good for single machine deployment)
DATABASE_URL="sqlite:///./shop_steward.db"

# PostgreSQL (recommended for production/multi-user environments)
# DATABASE_URL="postgresql://user:password@localhost/shop_steward"

# CORS Settings (adjust if frontend is on different domain/port)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173"]

# File Upload Settings
UPLOAD_DIR="./uploads"
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=[".step",".stp",".iges",".igs",".stl",".3mf",".sldprt",".sldasm",".ipt",".iam",".nc",".cnc",".gcode",".mpf",".tap",".pdf",".dwg",".dxf",".png",".jpg",".jpeg",".gif",".zip",".7z"]

# Module Settings
MODULES_DIR="./modules"

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30  # seconds
